{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "args": [
                "GCC_PATH=/mnt/c/toolchain/avr-gcc-9.2.0-x64-mingw/bin",
                "-s",
                "-j"
            ],
            "options": {
                "shell": {
                    "executable": "wsl.exe"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make",
            "args": [
                "-s",
                "clean"
            ],
            "options": {
                "shell": {
                    "executable": "wsl.exe"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "flash",
            "type": "shell",
            "command": "make",
            "args": [
                "GCC_PATH=/mnt/c/toolchain/avr-gcc-9.2.0-x64-mingw/bin",
                "flash"
            ],
            "options": {
                "shell": {
                    "executable": "wsl.exe"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}